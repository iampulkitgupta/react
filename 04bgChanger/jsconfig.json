{
    "compilerOptions": {
      "jsx": "react-jsx",
      "module": "ESNext",
      "target": "ES6",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}